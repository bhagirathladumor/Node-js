<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Hotel Dashboard</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

  <style>
    /* 1. VISIBLE BACKGROUND COLOR */
    body {
      background-color: #e0e7ff !important; 
      min-height: 100vh;
      font-family: sans-serif;
    }

    .custom-header {
      background: #1e1b4b; 
      border-bottom: 2px solid #4338ca;
      padding: 1rem 0;
    }

    .brand-logo {
      display: flex;
      align-items: center;
      gap: 10px;
      color: #ffffff;
      text-decoration: none;
    }

    .brand-icon {
      background: #6366f1;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 10px;
    }

    /* 2. CARD STYLING */
    .card { 
      border: none; 
      border-radius: 15px; 
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); 
    }

    /* 3. TABLE HEADER COLOR */
    .table thead { 
      background-color: #f5f3ff !important; 
    }

    .table thead th {
      color: #4338ca;
      text-transform: uppercase;
      font-size: 0.8rem;
      padding: 15px;
    }

    .btn-success { 
      background-color: #059669; 
      border: none;
      font-weight: bold;
    }

    /* Status Badge Colors */
    .badge-confirmed {
      background-color: #dcfce7;
      color: #166534;
      border: 1px solid #bbf7d0;
    }
    
    .badge-pending {
      background-color: #fef9c3;
      color: #854d0e;
      border: 1px solid #fef08a;
    }

    footer {
      background-color: #ffffff;
      margin-top: auto;
    }
  </style>
</head>

<body class="d-flex flex-column">

  <header class="custom-header shadow">
    <div class="container d-flex justify-content-between align-items-center">
      <a href="/" class="brand-logo">
        <div class="brand-icon">
          <i class="bi bi-building-fill fs-5"></i>
        </div>
        <span class="fs-4 fw-bold text-white">Hotel Manager</span>
      </a>
    </div>
  </header>

  <main class="container py-5">
    <div class="d-flex justify-content-between align-items-end mb-4">
      <div>
        <h2 class="fw-bold text-dark">Current Bookings</h2>
        <p class="text-secondary mb-0">List of all active guest reservations</p>
      </div>
      <a href="/add" class="btn btn-success px-4 py-2">
        <i class="bi bi-plus-circle me-2"></i>New Booking
      </a>
    </div>

    <div class="card bg-white">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead>
              <tr>
                <th class="ps-4">ID</th>
                <th>Guest Name</th>
                <th>Room</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th>Status</th>
                <th class="text-center pe-4">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.map((item, index) => { %>
              <tr>
                <td class="ps-4 fw-bold text-muted"><%= index + 1 %></td>
                <td><span class="fw-bold text-primary"><%= item.name %></span></td>
                <td><span class="badge bg-light text-dark border"><%= item.roomType %></span></td>
                <td><%= item.checkInDate %></td>
                <td><%= item.checkOutDate %></td>
                <td>
                  <span class="badge rounded-pill px-3 py-2 <%= item.status === 'Confirmed' ? 'badge-confirmed' : 'badge-pending' %>">
                    <%= item.status %>
                  </span>
                </td>
                <td class="text-center pe-4">
                  <a href="/edit/<%= item.id %>" class="btn btn-sm btn-outline-primary border-0 me-2">
                    <i class="bi bi-pencil-square"></i>
                  </a>
                  <a href="/delete/<%= item.id %>" class="btn btn-sm btn-outline-danger border-0" onclick="return confirm('Delete this booking?')">
                    <i class="bi bi-trash3-fill"></i>
                  </a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <footer class="text-muted text-center py-4 border-top">
    <div class="container">
      <small> &copy; 2025 <span class="fw-bold">Hotel Manager</span> | All Rights Reserved </small>
    </div>
  </footer>

</body>
</html>